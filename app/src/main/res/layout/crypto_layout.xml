<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_crypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:theme="@style/MaterialTheme"
        app:cardBackgroundColor="#EFEFF2"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        app:rippleColor="@color/mcvRippleColor"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_main_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_crypto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="@string/crypto"
                    android:padding="5dp"
                    android:src="@drawable/ic_bitcoin"
                    app:civ_border_width="0dp" />

                <RelativeLayout
                    android:id="@+id/rl_views"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="1dp"
                    android:layout_toEndOf="@+id/civ_crypto"
                    android:layout_toRightOf="@+id/civ_crypto"
                    android:padding="1dp">

                    <RelativeLayout
                        android:id="@+id/rl_crypto_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_crypto_title"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_toStartOf="@+id/tv_crypto_value"
                            android:layout_toLeftOf="@+id/tv_crypto_value"
                            android:text="BTC"
                            android:textAllCaps="true"
                            android:textColor="#112B4D"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_crypto_value"
                            style="@style/TextAppearance.AppCompat.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="2.932011"
                            android:textColor="#112B4D"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_crypto_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_crypto_title"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_crypto_name"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_toStartOf="@+id/tv_crypto_amount"
                            android:layout_toLeftOf="@+id/tv_crypto_amount"
                            android:text="Bitcoin"
                            android:textColor="#112B4D"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_crypto_amount"
                            style="@style/TextAppearance.AppCompat.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="@string/_0_000"
                            android:textColor="#112B4D"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/view_separator_crypto_name"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rl_crypto_name"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorBlack10" />

                    <RelativeLayout
                        android:id="@+id/rl_last_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view_separator_crypto_name"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/tv_display_last_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_toStartOf="@+id/tv_last_update"
                            android:layout_toLeftOf="@+id/tv_last_update"
                            android:text="@string/last_update" />

                        <TextView
                            android:id="@+id/tv_last_update"
                            style="@style/TextAppearance.AppCompat.Large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="13:04 AM - 07 Aug, 21"
                            android:textColor="#112B4D"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>