<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:id="@+id/rl_no_data">

    <ImageView
        android:id="@+id/imv_no_data"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="@string/no_crypto_information_is_available"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_no_data"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_no_data"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_below="@+id/imv_no_data"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retry_swipe_down_to_refresh"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_no_data"
        android:layout_centerHorizontal="true"
        android:text="@string/retry_or_swipe_down_to_refresh"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:theme="@style/MaterialTheme"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

</RelativeLayout>