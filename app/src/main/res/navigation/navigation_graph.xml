<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/nav_splash_fragment">

    <fragment
        android:id="@+id/nav_splash_fragment"
        android:name="manu.apps.lucemtrader.fragments.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/splash_fragment">

        <action
            android:id="@+id/action_splash_to_slides_fragment"
            app:destination="@id/nav_slides_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right"
            app:popUpTo="@+id/navigation_graph"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_splash_to_phone_no_fragment"
            app:destination="@id/nav_phone_no_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right"
            app:popUpTo="@+id/navigation_graph"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_splash_to_investor_main_fragment"
            app:destination="@id/nav_investor_main_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right"
            app:popUpTo="@+id/navigation_graph"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_splash_to_admin_main_fragment"
            app:destination="@id/nav_admin_main_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right"
            app:popUpTo="@+id/navigation_graph"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/nav_slides_fragment"
        android:name="manu.apps.lucemtrader.fragments.SlidesFragment"
        android:label="Slides"
        tools:layout="@layout/slides_fragment">

        <action
            android:id="@+id/action_slides_to_phone_no_fragment"
            app:destination="@id/nav_phone_no_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right"
            app:popUpTo="@+id/navigation_graph"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/nav_phone_no_fragment"
        android:name="manu.apps.lucemtrader.fragments.PhoneNoFragment"
        android:label="Phone Details"
        tools:layout="@layout/phone_no_fragment">

        <action
            android:id="@+id/action_phone_no_to_verification_fragment"
            app:destination="@id/nav_verification_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right"
            app:popUpTo="@+id/navigation_graph"
            app:popUpToInclusive="true">

            <argument
                android:name="phoneNo"
                android:defaultValue="0"
                app:argType="string" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/nav_verification_fragment"
        android:name="manu.apps.lucemtrader.fragments.VerificationFragment"
        android:label="Verification"
        tools:layout="@layout/verification_fragment">

        <argument
            android:name="phoneNo"
            android:defaultValue="0"
            app:argType="string" />

        <action
            android:id="@+id/action_verification_to_main_fragment"
            app:destination="@id/nav_investor_main_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right"
            app:popUpTo="@+id/navigation_graph"
            app:popUpToInclusive="true">

        </action>

    </fragment>

    <fragment
        android:id="@+id/nav_investor_main_fragment"
        android:name="manu.apps.lucemtrader.fragments.MainFragment"
        android:label="Main"
        tools:layout="@layout/main_fragment">

        <argument
            android:name="mainFragmentLaunchType"
            android:defaultValue="fromInvestorsNavigationGraph"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/nav_admin_main_fragment"
        android:name="manu.apps.lucemtrader.fragments.MainFragment"
        android:label="Main"
        tools:layout="@layout/main_fragment">

        <argument
            android:name="mainFragmentLaunchType"
            android:defaultValue="fromAdminNavigationGraph"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/nav_history_fragment"
        android:name="manu.apps.lucemtrader.fragments.HistoryFragment"
        android:label="History"
        tools:layout="@layout/history_fragment">

    </fragment>

    <fragment
        android:id="@+id/nav_profit_loss_fragment"
        android:name="manu.apps.lucemtrader.fragments.ProfitLossFragment"
        android:label="@string/profit_loss"
        tools:layout="@layout/profit_loss_fragment">

    </fragment>

    <fragment
        android:id="@+id/nav_investors_fragment"
        android:name="manu.apps.lucemtrader.fragments.InvestorsFragment"
        android:label="History"
        tools:layout="@layout/investors_fragment">

        <action
            android:id="@+id/action_investors_to_add_investors_fragment"
            app:destination="@id/nav_edit_add_investors_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right" >

            <argument
                android:name="addEditInvestorsLaunchType"
                android:defaultValue="addInvestors"
                app:argType="string" />

            <argument
                android:name="mainFragmentLaunchType"
                android:defaultValue="fromAdmin"
                app:argType="string" />

        </action>

        <action
            android:id="@+id/action_investors_to_add_edit_investors_fragment"
            app:destination="@id/nav_edit_add_investors_fragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right" >

            <argument
                android:name="addEditInvestorsLaunchType"
                android:defaultValue="editInvestors"
                app:argType="string" />

            <argument
                android:name="name"
                android:defaultValue="n/a"
                app:argType="string" />

            <argument
                android:name="username"
                android:defaultValue="n/a"
                app:argType="string" />

            <argument
                android:name="country"
                android:defaultValue="n/a"
                app:argType="string" />

            <argument
                android:name="phoneNo"
                android:defaultValue="n/a"
                app:argType="string" />

            <argument
                android:name="securityCode"
                android:defaultValue="n/a"
                app:argType="string" />

            <argument
                android:name="dateJoined"
                android:defaultValue="n/a"
                app:argType="string" />

            <argument
                android:name="sharedAgreed"
                android:defaultValue="n/a"
                app:argType="string" />

            <argument
                android:name="avatarUrl"
                android:defaultValue="n/a"
                app:argType="string" />

        </action>

        <action
            android:id="@+id/action_investors_to_investor_main_fragment_from_admin"
            app:destination="@id/nav_investor_main_fragment_from_admin"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right" >

            <argument
                android:name="navInvestorMainFragmentFromAdminUserId"
                android:defaultValue="0"
                app:argType="string" />

            <argument
                android:name="avatarUrl"
                android:defaultValue="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png"
                app:argType="string" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/nav_edit_add_investors_fragment"
        android:name="manu.apps.lucemtrader.fragments.EditAddInvestorsFragment"
        android:label="Add Investor"
        tools:layout="@layout/edit_add_investors_fragment">

        <argument
            android:name="addEditInvestorsLaunchType"
            android:defaultValue="editInvestors"
            app:argType="string" />

        <argument
            android:name="name"
            android:defaultValue="n/a"
            app:argType="string" />

        <argument
            android:name="username"
            android:defaultValue="n/a"
            app:argType="string" />

        <argument
            android:name="country"
            android:defaultValue="n/a"
            app:argType="string" />

        <argument
            android:name="phoneNo"
            android:defaultValue="n/a"
            app:argType="string" />

        <argument
            android:name="securityCode"
            android:defaultValue="n/a"
            app:argType="string" />

        <argument
            android:name="dateJoined"
            android:defaultValue="n/a"
            app:argType="string" />

        <argument
            android:name="sharedAgreed"
            android:defaultValue="n/a"
            app:argType="string" />

        <argument
            android:name="avatarUrl"
            android:defaultValue="n/a"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/nav_investor_main_fragment_from_admin"
        android:name="manu.apps.lucemtrader.fragments.MainFragment"
        android:label="Main"
        tools:layout="@layout/main_fragment">

        <argument
            android:name="mainFragmentLaunchType"
            android:defaultValue="fromAdmin"
            app:argType="string" />

        <argument
            android:name="avatarUrl"
            android:defaultValue="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/nav_history_fragment_from_admin"
        android:name="manu.apps.lucemtrader.fragments.HistoryFragment"
        android:label="History"
        tools:layout="@layout/history_fragment">

    </fragment>

    <fragment
        android:id="@+id/nav_profit_loss_fragment_from_admin"
        android:name="manu.apps.lucemtrader.fragments.ProfitLossFragment"
        android:label="@string/profit_loss"
        tools:layout="@layout/profit_loss_fragment">

    </fragment>


</navigation>